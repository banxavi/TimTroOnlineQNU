<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoRoom">

    <Button
        android:id="@+id/btnshowroom"
        android:layout_width="105dp"
        android:layout_height="41dp"
      android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="220dp"
        android:background="@drawable/book_button_bg"
        android:fontFamily="@font/rubik"
        android:text="Danh sách phòng"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="450dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Số điện thoại"
        android:textColor="#044363" />


    <ImageView
        android:id="@+id/avatar"
        android:layout_width="409dp"
        android:layout_height="207dp"
        android:layout_marginTop="30dp"
        android:adjustViewBounds="true" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="250dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Thông tin người dùng"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="320dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Họ tên"
        android:textColor="#044363"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="380dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Năm sinh"
        android:textColor="#044363" />

    <Button
        android:id="@+id/btnupdate"
        android:layout_width="105dp"
        android:layout_height="41dp"
       android:layout_alignParentBottom="true"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/book_button_bg"
        android:fontFamily="@font/rubik"
        android:text="Sửa"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/hoten"
        android:layout_width="270dp"
        android:layout_height="39dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="310dp"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edtid"
        android:layout_width="127dp"
        android:layout_height="33dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="250dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="10dp" />

    <EditText
        android:id="@+id/diachi"
        android:layout_width="296dp"
        android:layout_height="39dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="370dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/sdt"
        android:layout_width="270dp"
        android:layout_height="39dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="430dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <ImageView
        android:id="@+id/btnback1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/back"
        android:layout_width="30dp"
        android:layout_height="20dp" />
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="712dp"
        android:background="?attr/colorButtonNormal"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/btnhomeinfo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/btnuserinfo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/profileicon" />

    </LinearLayout>

</RelativeLayout>
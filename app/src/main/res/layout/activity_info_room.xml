<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoRoom">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:nestedScrollingEnabled="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnback"
                android:background="@drawable/back"
                android:layout_marginLeft="05dp"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp" />

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="4dp"
                android:adjustViewBounds="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="240dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Giá"

                    android:textColor="#044363" />

                <TextView
                    android:id="@+id/edtsonguoio"
                    android:layout_width="244dp"
                    android:layout_height="39dp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="280dp"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:inputType="textPersonName"
                    android:text="alo"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/edtsdt"
                    android:layout_width="263dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="180dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:inputType="textPersonName"
                    android:text="alo"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="0dp" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="140dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Địa chỉ"
                    android:textColor="#044363" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="290dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Số người ở/phòng"
                    android:textColor="#044363" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="90dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Họ tên"
                    android:textColor="#044363"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="190dp"
                    android:layout_weight="0"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Số điện thoại"
                    android:textColor="#044363" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="330dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Mô tả"
                    android:textColor="@android:color/background_dark" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Thông tin phòng"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/edtgia"
                    android:layout_width="282dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="230dp"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:inputType="textPersonName"
                    android:text="alo"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/edtmota"
                    android:layout_width="325dp"
                    android:layout_height="105dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="360dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/edtchuphong"
                    android:layout_width="257dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="80dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:inputType="textPersonName"
                    android:text="alo"
                    android:textColor="@color/com_facebook_blue"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/edtdiachi"
                    android:layout_width="180dp"
                    android:layout_height="41dp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="130dp"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:inputType="textPersonName"
                    android:text="alo"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txmap"
                    android:layout_width="45dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="140dp"
                    android:text="Chỉ đường"
                    android:textSize="8dp" />

                <EditText
                    android:id="@+id/edtid"
                    android:layout_width="200dp"
                    android:layout_height="39dp"
                    android:layout_marginStart="152dp"
                    android:layout_marginLeft="152dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="2"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textSize="10dp" />

            </RelativeLayout>

            <Button
                android:id="@+id/btnlienhe"
                android:layout_width="300dp"
                android:layout_height="52dp"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/book_button_bg"
                android:fontFamily="@font/rubik"
                android:text="Liên lạc với chủ phòng"
                android:textColor="#FFFFFF" />

            <ListView
                android:id="@+id/list1"
                android:layout_width="match_parent"
                android:layout_height="470dp"
                android:layout_marginTop="20dp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="712dp"
        android:background="?attr/colorButtonNormal"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/btnhomeinfo1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/accinfo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/profileicon" />


    </LinearLayout>

</RelativeLayout>